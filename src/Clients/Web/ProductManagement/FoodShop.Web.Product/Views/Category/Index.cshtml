@model IEnumerable<CategoryDto>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<br />
<br />

<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Category List</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-controller="Category" asp-action="Create" class="btn btn-outline-primary">
                <i class="fas fa-plus"></i> Create New Category
            </a>
        </div>
    </div>
    @if (Model == null || !Model.Any()) {
        <div class="alert alert-info text-white lead">
            No categories to display
        </div>
    }
    else {
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>
                            <a asp-controller="Category" asp-action="Edit" class="btn btn-success" asp-route-id="@item.Id">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a asp-controller="Category" asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id" 
                                onclick="return confirm('Are you sure you want to delete category: @item.Name')">
                                <i class="fas fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>