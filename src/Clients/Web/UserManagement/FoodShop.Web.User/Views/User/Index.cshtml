@model IEnumerable<UserModelDto>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<br />
<br />

<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">User List</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-controller="User" asp-action="Create" class="btn btn-outline-primary">
                <i class="fas fa-plus"></i> Create New User
            </a>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Username</th>
                <th>Email</th>
                <th>Full Name</th>
                <th>Phone</th>
                <th>Role</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.UserName</td>
                    <td>@item.Email</td>
                    <td>@item.FirstName @item.LastName</td>
                    <td>@item.Phone</td>
                    <td>@item.Role</td>
                    <td>
                        <a asp-controller="User" asp-action="Details" class="btn btn-success" asp-route-id="@item.Id">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a asp-controller="User" asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
