@model UserModelDto

<br />
<div class="container border p-3">
    <h1 class="text-info">User Details</h1>

    <hr />
    <div class="row">
        <input asp-for="Id" class="form-control" hidden />
        <div class="col-6 pb-3">
            <label asp-for="UserName" class="control-label pt-2" style="font-size:20px;"></label>
            <input asp-for="UserName" class="form-control" disabled />
        </div>
        <div class="col-6 pb-3">
            <label asp-for="Email" class="control-label pt-2" style="font-size:20px;"></label>
            <input asp-for="Email" class="form-control" disabled />
        </div>
        <div class="col-6 pb-3">
            <label asp-for="FirstName" class="control-label pt-2" style="font-size:20px;"></label>
            <input asp-for="FirstName" class="form-control" disabled />
        </div>
        <div class="col-6 pb-3">
            <label asp-for="LastName" class="control-label pt-2" style="font-size:20px;"></label>
            <input asp-for="LastName" class="form-control" disabled />
        </div>
        <div class="col-12 pb-3">
            <label asp-for="Address" class="control-label pt-2" style="font-size:20px;"></label>
            <textarea asp-for="Address" class="form-control" rows="3" disabled></textarea>
        </div>
        <div class="col-6 pb-3">
            <label asp-for="Phone" class="control-label pt-2" style="font-size:20px;"></label>
            <input asp-for="Phone" class="form-control" disabled />
        </div>
        <div class="col-6 pb-3">
            <label asp-for="Role" class="control-label pt-2" style="font-size:20px;"></label>
            <input asp-for="Role" class="form-control" disabled />
        </div>
        <div class="col-3">
            <a asp-controller="User" asp-action="Index" class="btn-primary btn form-control ">Back to List</a>
        </div>
        <div class="col-3">
            <a asp-controller="EditUser" asp-action="Edit" class="btn-primary btn form-control" asp-route-id="@Model.Id">Edit Profile</a>
        </div>
    </div>

    <div>
    </div>
</div>